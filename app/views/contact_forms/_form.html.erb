<%= simple_form_for @contact_form, html: { class: "max-w-lg mx-auto p-6 space-y-4" } do |f| %>
  <%= render 'layouts/template/form_errors', item: @contact_form, f: f %>

  <div>
    <%= f.label :full_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.input_field :full_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
    <%= f.input_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :email_address, class: "block text-sm font-medium text-gray-700" %>
    <%= f.input_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :company_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.input_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :message, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.submit "Submit", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
