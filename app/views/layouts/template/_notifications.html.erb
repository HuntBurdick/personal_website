<% if notice.present? %>
  <div class="p-4 m-5 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="p-4 m-5 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
    <%= alert %>
  </div>
<% end %>
