<div class="m-6 md:m-12 lg:m-24 p-6 md:p-8 lg:p-12 mt-36 border-7 border-[#b1aa88] rounded-[28px] bg-[#c4c4c4]" style="border: 7px solid #b1aa88; margin-top: 145px;">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Left Section -->
    <div class="text-center lg:text-left">
      <h1 class="jersey-10-regular hovering text-white text-[28px] md:text-[36px] lg:text-[47px] font-bold">
        Armory
      </h1>

      <div class="w-full max-w-[200px] mx-auto lg:mx-0">
        <%= image_tag 'armory.png' %>
      </div>
    </div>

    <!-- Right Section -->
    <div>
      <div class="skills flex flex-col md:flex-row gap-6 md:gap-12 px-4 md:px-8 lg:px-12">
        <!-- Technology Skills -->
        <div class="flex-1">
          <h2 class="text-white text-[20px] md:text-[24px] lg:text-[28px] mb-4">Technology Skills</h2>
          <ul class="list-none p-0 space-y-4">
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">Programming Languages</h3>
              <p class="text-sm md:text-base">Node, Ruby, JavaScript, Python, PHP, Dart, C#</p>
            </li>
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">Frameworks & Libraries</h3>
              <p class="text-sm md:text-base">React, React Native, Ruby on Rails, Flutter</p>
            </li>
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">DevOps & Tools</h3>
              <p class="text-sm md:text-base">CI/CD, Deployment Pipelines, Cloud</p>
              <p class="text-sm md:text-base">Unit and system test strategies</p>
            </li>
          </ul>
        </div>

        <!-- Leadership Skills -->
        <div class="flex-1">
          <h2 class="text-white text-[20px] md:text-[24px] lg:text-[28px] mb-4">Leadership Skills</h2>
          <ul class="list-none p-0 space-y-4">
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">Project Management</h3>
              <p class="text-sm md:text-base">Scrum, Requirements Analysis</p>
            </li>
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">Team Building</h3>
              <p class="text-sm md:text-base">Hiring, Team Structure, Culture Building</p>
            </li>
            <li>
              <h3 class="text-[#3e3e3e] text-[18px] md:text-[20px] lg:text-[24px] font-semibold">Strategic Leadership</h3>
              <p class="text-sm md:text-base">Meeting Facilitation, Product Vision, Scaling Organizations</p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
